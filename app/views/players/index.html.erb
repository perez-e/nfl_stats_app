<%= render partial: "layouts/nav" %>
<div class='index-container'>
	<h1 class="color">Welcome to the NFL Database</h1>
	<%= form_for :player, url: "/players" do |f| %>
		<div class="form-group">
			<%= f.text_field :name, placeholder: "Search any player" %>
			<%= f.submit 'Search', class: 'btn btn-default btn-color' %>
		</div>
	<% end %>
	<p class='color fun'>Join the fun! <a  class='sign-up' data-toggle="modal" data-target="#signup" href='#'>click here</a></p>
</div>

<!-- Sign Up Modal -->
<div class="modal fade" id="signup" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Sign Up</h4>
      </div>
      <%= form_for :user, url: '/users' do |f| %>
      <div class="modal-body">
        	<div class='form-group'>
	        	<%= f.label 'First' %>
	        	<%= f.text_field :first_name, placeholder: 'first name' %>
	        	<%= f.label 'Last' %>
	        	<%= f.text_field :last_name, placeholder: 'last name' %> 
	        </div>
	        <div class='form-group'>
	        	<%= f.label 'Email' %>
	        	<%= f.text_field :email, placeholder: 'Enter valid email' %>
	        </div>
	        <div class='form-group'>
	        	<%= f.label 'Password' %>
	        	<%= f.password_field :password %>
	        </div>
	        <div class='form-group'>
	        	<%= f.label 'Confirmation' %>
	        	<%= f.password_field :password_confirmation %>
	        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default btn-color" data-dismiss="modal">Close</button>
        <%= f.submit 'Sign Up', class: 'btn btn-default btn-color' %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Sign In Modal -->
<div class="modal fade bs-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
    	<div class='modal-header'>
    		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Sign In</h4>
    	</div>
    	<div class='modal-body'>
	     	<%= form_for :user, url: '/sessions' do |f| %>
		        <div class='form-group'>
		        	<%= f.label 'Email' %>
		        	<%= f.text_field :email, placeholder: 'Enter valid email' %>
		        </div>
		        <div class='form-group'>
		        	<%= f.label 'Password' %>
		        	<%= f.password_field :password %>
		        </div>
	    </div>
	    <div class='modal-footer'>
		    	<button type="button" class="btn btn-default btn-color" data-dismiss="modal">Close</button>
		        <%= f.submit 'Sign In', class: 'btn btn-default btn-color' %>
	        <% end %>
	    </div>
    </div>
  </div>
</div>