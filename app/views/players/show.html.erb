<h1><%= @player.name %> <p><%= @player.position.name %> <%= @player.number %></p></h1>
<h3>College: <%= @player.college %></h3>
<h3><strong>Height:</strong> <%= @player.height %> <strong>Weight:</strong> <%= @player.weight %></h3>
<img src='<%= @player.img_url %>'>

<!-- Nav tabs -->
<ul class="nav nav-tabs">
  <li class="active"><a href="#home" data-toggle="tab">Passing</a></li>
  <li><a href="#profile" data-toggle="tab">Rushing</a></li>
  <li><a href="#messages" data-toggle="tab">Receiving</a></li>
  <li><a href="#settings" data-toggle="tab">Defensive</a></li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane fade in active" id="home"><%= render partial: 'passing', locals: {player: @player} %></div>
  <div class="tab-pane fade" id="profile"><%= render partial: 'rushing', locals: {player: @player} %></div>
  <div class="tab-pane fade" id="messages"><%= render partial: 'receiving', locals: {player: @player} %></div>
  <div class="tab-pane fade" id="settings"><%= render partial: 'defensive', locals: {player: @player} %></div>
</div>